pipeline{
    
    agent any
	
	tools{
	  nodejs 'node' 
    }
	
    stages{
        stage('build'){
            steps{
                echo 'this is build step'
				dir('light-bootstrap-dashboard-react-master'){
                  sh 'npm install'
				  sh 'npm ls'
				}
            } 
        }
        stage('test'){
            steps{
                echo 'this is test stage'
                dir('light-bootstrap-dashboard-react-master'){
                  sh 'npm test'
				}
            } 
        }
        
    }
    
    post{
        always{
            echo 'This job is complete'
            
        }
        failure{
            echo 'failure'
            
        }
    }
}
